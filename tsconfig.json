{
    "compileOnSave": true,
    "compilerOptions": {
      "module": "commonjs",
      "resolveJsonModule": true,
      "strict": true,
      "baseUrl": "./",
      "outDir": "build",
      "sourceMap": true,
      "removeComments": true,
      "experimentalDecorators": true,
      "target": "es5",
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "strictNullChecks": true,
      "importHelpers": true,
      "types": [
        "node"
      ],
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2015",
        "dom"
      ]
    },
    "include": [
      "./**/*.ts"
    ],
    "exclude": [
      "./**/*.test.ts",
      "./public/",
      "node_modules"
    ]
  }